<!-- Title -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<!-- Message -->
<%- messages() %>

<!-- Errors -->
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>
    
<!-- Main Content -->
<div class="search">
    <form action="/inv/search-results" method="post">
        <input type="text" placeholder="Make">
        <input type="text" placeholder="Model">
        <input type="submit" value="Search">
    </form>
</div>