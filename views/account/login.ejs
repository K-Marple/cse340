<!-- Title -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<!-- Form -->
<form class="login">
    <label>Email</label>
    <input type="email" id="email" name="account_email">
    <label>Password</label>
    <input type="password" id="password" name="password">
    <input type="submit" value="Login">
    <p id="signup">No account? <a href="/account/registration">Sign-up</a></p>
</form>