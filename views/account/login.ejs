<!-- Title -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<!-- Form -->
<form class="login" action="/account/login" method="post">
    <label>Email</label>
    <input type="email" id="email" name="account_email" value="<%= locals.account_email %>" required>
    <label>Password</label>
    <input type="password" id="password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
    <div class="requirements">*Must contain at least 12 letters with 1 uppercase, 1 number and 1 special character</div>    
    <input type="submit" value="Login">
    <p id="signup">No account? <a href="/account/registration">Sign-up</a></p>
</form>