<!-- Title -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<!-- Messages -->
<%- messages() %>

<!-- Errors -->
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<!-- Main Content -->
<% if (locals.accountData.account_type == "Client") { %>
    <h2 class="welcome-msg">Welcome <%= locals.accountData.account_firstname %></h2>
    <div class=update-box>
        <h3>Update Account</h3>
        <p><a href="../account/update">Update Account Information</a></p>
    </div>
    <div class="review-box">
        <h3>My Reviews</h3>
        <% if (reviewsExist) { %>
            <p><%- reviewsExist %></p>
        <% } %>
    </div>
<% } else if (locals.accountData.account_type == "Employee" || locals.accountData.account_type == "Admin") { %>
    <h2 class="welcome-msg">Welcome <%= locals.accountData.account_firstname %></h2>
    <div class=update-box>
        <h3>Update Account</h3>
        <p><a href="../account/update">Update Account Information</a></p>
    </div>
    <div class="inv-manage-box">
        <h3>Inventory Management</h3>
        <p><a href="../inv/">Manage Inventory</a></p>
    </div>
    <% } %>