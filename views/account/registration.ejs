<!-- Title -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<!-- Errors -->
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<!-- Form -->
<form class="register" action="/account/register" method="post">
    <label>First Name</label>
    <input type="text" id="fname" name="account_firstname" value="<%= locals.account_firstname %>" required>
    <label>Last Name</label>
    <input type="text" id="lname" name="account_lastname" value="<%= locals.account_lastname %>" required>
    <label>Email</label>
    <input type="email" id="email" name="account_email" value="<%= locals.account_email %>" required>
    <label>Password</label>
    <input type="password" id="password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
    <div class="requirements">*Must contain at least 12 letters with 1 uppercase, 1 number and 1 special character</div>
    <input type="submit" value="Register">
</form>